{
  "compilerOptions": {
    "target": "ES2022",
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "module": "ESNext",
    "baseUrl": ".",
    "rootDir": ".",
    "lib": [
      "ES2022",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "moduleResolution": "bundler",
    "isolatedModules": true,
    "moduleDetection": "force",
    "allowJs": true,
    "jsx": "react-jsx",
    "paths": {
      "@/*": ["./*"],
      "@api/*": ["./api/*"],
      "@components/*": ["./components/*"],
      "@pages/*": ["./pages/*"],
      "@stores/*": ["./stores/*"],
      "@types": ["./types.ts"],
      "@utils/*": ["./utils/*"]
    },
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "strict": false
  },
  "include": ["**/*.ts", "**/*.tsx", "vite.config.ts", "tailwind.config.ts"],
  "exclude": ["node_modules", "dist"]
}
